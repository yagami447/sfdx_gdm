<apex:page controller="Opp_wzMulti_Ctrl" tabStyle="OpportunityLineItem">
    <apex:sectionHeader subtitle="Nova oportunidade" title="Edição de items de oportunidade">    
        <apex:form >
            <apex:pageMessages ></apex:pageMessages>
            <apex:pageBlock title="Produtos">
                <apex:pageBlockButtons >
                    <apex:commandButton action="{!prev2}" value="Cancelar"/>
                    <apex:commandButton action="{!guardar}" value="Salvar"/>
                </apex:pageBlockButtons>               
                <apex:panelGrid columns="1" id="theGrid" width="100%">
                    <apex:dataTable value="{!selitems}" var="p1" styleClass="list">
                    <apex:column Style="width:100px;"><apex:facet name="header">Produto</apex:facet>{!p1.item.pricebookentry.Name}</apex:column>
                        <apex:column ><apex:facet name="header">Autorização</apex:facet><apex:inputField Style="width:90px;" value="{!p1.item.Autori__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Data</apex:facet><apex:inputField value="{!p1.item.Data__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Cidade</apex:facet><apex:inputField value="{!p1.item.Cidade__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Ha. Autorizados</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Area__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Ha. Plantados</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Area_Plantada__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Sem. Bruta (Sacas)</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Semente_bruta__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Sem. Beneficiada (Sacas)</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Semente_beneficiada__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Sem. Aprovada (Sacas)</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Semente_aprovada__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Aut.Desc.Sem.Bruta</apex:facet><apex:inputField Style="width:85px; "value="{!p1.item.Autorizacion_V_Industria__c}"/></apex:column>
                        <apex:column ><apex:facet name="header">Qtde.Aut.Sem.Bruta(Scs)</apex:facet><apex:inputField Style="width:85px;" value="{!p1.item.Cantidad_autorizada_vi__c}"/></apex:column>
                    </apex:dataTable>
                </apex:panelGrid>
            </apex:pageBlock>
        </apex:form>
    </apex:sectionHeader>
</apex:page>