<apex:page language="{!IF(ISNULL(language),'en_US',language)}" id="Apenddix2RebEditPage" showHeader="false" standardStylesheets="false" cache="false" title="{!titulo}" controller="aSiteAppendix2Controller" action="{!validate}" docType="html-5.0">
<apex:composition template="{!$Site.Template}">
<apex:define name="body">
<style>
.selected {
    background: rgba(38,185,154,.16);
    border-color: rgba(221,221,221,0.780392);
}
</style>
<body class="nav-md footer_fixed">
    <center>
    <apex:panelGrid bgcolor="white" columns="1">         
        <br/>
        <br/>
        <apex:outputPanel layout="block" styleClass="topPanel" style="margin-top:20px;">
            <apex:panelGrid cellpadding="0" cellspacing="0" bgcolor="white" columns="1"> 
                <apex:panelGroup >
                <apex:form id="profileForm">                    
                <div class="row">
                    <div class="right_col" role="main" style="min-width:800px">
                        <div class="">
                            <div class="page-title">
                                <div class="title_left">
                                    <h3>{!tituloReb} - {!$Label.New}</h3>
                                </div>                                                                    
                            </div>
                        </div>
                        <div class="clearfix"></div>                                                                        
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>{!$ObjectType.Product2.LabelPlural}<small>{!$Label.active_list}</small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content" id="x_content">
                                        <div role="tabpanel" class="tab-pane" id="tab_items" aria-labelledby="profile-tab">
                                            <apex:pageBlock id="it">                                            
                                                <apex:pageBlockTable value="{!App2RebItems}" var="s" styleclass="data table table-striped no-margin">
                                                    <apex:column headerValue="{!$ObjectType.OpportunityLineItem.Fields.Variedade_Prod__c.Label}">
                                                  

                                                    <apex:selectList value="{!s.variedad}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" disabled="true">
                                                            <apex:selectOptions value="{!OptionVariedadesAII}"/>
                                                        </apex:selectList>
                                                    </apex:column>    
                                                    
                                                    <apex:column headerValue="Categoria Origem" >                                                    
                                                        
                                                        <apex:selectList value="{!s.categoria_a_rebajar_id}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" disabled="true">
                                                            <apex:selectOptions value="{!FullCategorias}" />
                                                        </apex:selectList>
                                                    </apex:column>
                                                    <apex:column headerValue="Categoria Rebaixada" >                                                        
                                                        <apex:selectList value="{!s.categoria_id}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" disabled="true">
                                                            <apex:selectOptions value="{!FullCategorias}" />
                                                        </apex:selectList>
                                                    </apex:column>
                                                   
                                                    <apex:column headerValue="Qtde Rebaixada (Sc40kg)" >
                                                        <apex:input type="text" value="{!s.sem_rebajada}" styleClass="form-control col-md-2 col-xs-12" />
                                                    </apex:column>
                                                    <apex:column headerValue="{!$ObjectType.OpportunityLineItem.Fields.Lote_Rebajado__c.Label}" >
                                                        <apex:input type="text" value="{!s.lote_rebajado}" required="required" html-min="0" styleClass="form-control col-md-2 col-xs-12" />
                                                    </apex:column>
                                                    <apex:column headerClass="column-title" headerValue="{!$Label.action}">
                                                        <apex:commandLink value="{!$Label.Remove}" action="{!removerProdRebaja}" rerender="profileForm">
                                                            <apex:param value="{!s.indice}" assignTo="{!linea}" name="toRemove"/>
                                                        </apex:commandLink>                                                        
                                                    </apex:column>

                                                </apex:pageBlockTable>
                                            </apex:pageBlock>
                                        </div>
                                        <br/><br/><br/>
                                    </div>
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    <div class="x_title">
                                        <h2>Adicionar Produtos<small>{!$Label.active_list}</small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>

                                    <div class="x_content">
                                        <div role="tabpanel" class="tab-pane" id="tab_items_new" aria-labelledby="profile-tab">
                                            <apex:pageBlock id="it_new">                                            
                                                <apex:pageBlockTable value="{!App2RebItemsNew}" var="s" styleclass="data table table-striped no-margin">
                                                    <apex:column headerValue="{!$ObjectType.OpportunityLineItem.Fields.Variedade_Prod__c.Label}">
                                                        <apex:selectList value="{!s.variedad}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" >
                                                            <apex:selectOptions value="{!OptionVariedadesAII}"/>
                                                            <apex:actionSupport event="onchange"  reRender="catOrigen"/>                                                                                                                 
                                                        </apex:selectList>
                                                    </apex:column>    

                                                    <apex:column headerValue="Categoria Origem" >
                                                        <apex:selectList id="catOrigen" value="{!s.categoria_a_rebajar_id}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" disabled="{!IF(s.variedad != null,false,true)}">
                                                            <apex:selectOptions value="{!OptionCategoria}"/>
                                                            <apex:actionSupport event="onchange"  reRender="catRbx"/> 
                                                        </apex:selectList>
                                                    </apex:column>            

                                                    <apex:column headerValue="Categoria Rebaixada" >                                                        
                                                        <apex:selectList id="catRbx" value="{!s.categoria_id}" styleClass="form-control col-md-2 col-xs-12" size="1" required="true" disabled="{!IF(s.categoria_a_rebajar_id != null , false, true)}" >
                                                            <apex:selectOptions value="{!OptionCategoriaRebaixada}"/>                                                              
                                                        </apex:selectList>
                                                    </apex:column>                                                   
                                                    <apex:column headerValue="Qtde Rebaixada (Sc40kg)" >
                                                        <apex:input type="text" value="{!s.sem_rebajada}" styleClass="form-control col-md-2 col-xs-12" />
                                                    </apex:column>
                                                    <apex:column headerValue="{!$ObjectType.OpportunityLineItem.Fields.Lote_Rebajado__c.Label}" >
                                                        <apex:input type="text" value="{!s.lote_rebajado}" required="required" html-min="0" styleClass="form-control col-md-2 col-xs-12" />
                                                    </apex:column>
                                                    <apex:column headerClass="column-title" headerValue="{!$Label.action}">
                                                        <apex:commandLink value="{!$Label.Add}" action="{!agregarProdRebaja}" rerender="profileForm">                                                            
                                                        </apex:commandLink>                                                        
                                                    </apex:column>
                                                </apex:pageBlockTable>
                                            </apex:pageBlock>
                                        </div>
                                    </div>
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    
                                    <div class="form-group">
                                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3 ">
                                            <apex:commandButton styleclass="btn btn-success" value="{!$Label.Submit}" action="{!saveAppend2Rebaja}" rerender="mensajes,profileForm">
                                                <apex:param value="1" assignTo="{!enviarAprobacion}" name="toApproval"/>
                                            </apex:commandButton>   
                                            <apex:commandButton styleclass="btn btn-success" value="{!$Label.Save}" action="{!saveAppend2Rebaja}" />
                                            <!--<apex:commandLink styleclass="btn btn-success" value="Imprimir" action="{!imprimirAnexo}" target="_blank"  />-->
                                            <apex:commandButton styleclass="btn btn-primary" immediate="true" value="{!$Label.Cancel}" action="{!editRebajaCancel}" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                </apex:form> 
                </apex:panelGroup>
            </apex:panelGrid> 
        </apex:outputPanel>
    </apex:panelGrid>
    </center>
    <br/>
    </body>
</apex:define>
</apex:composition>
</apex:page>