         </font></td>
    </tr>
    <tr>
         <td aling="left"><font face="verdana">
              <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Opportunity.Fields.Estado_Anexos_Portal_Miltiplicadores__c.Label}:  "></apex:outputText> 
              <apex:outputText style="font-size: 14px" value="{!appendix.Estado_Anexos_Portal_Miltiplicadores__c}"></apex:outputText>
         </font></td> 
         <td align="left"><font face="verdana">
             <apex:outputText rendered="{!appendix.RecordType.Name == 'Anexo I'}" style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Opportunity.Fields.Anexo_Complementar__c.Label}:  "></apex:outputText> 
             <apex:outputText rendered="{!appendix.RecordType.Name == 'Anexo I'}" style="font-size: 14px" value="{!appendix.Anexo_Complementar__c}"></apex:outputText>
             
             <apex:outputText rendered="{!appendix.RecordType.Name != 'Anexo I'}" style="font-size: 14px; font-weight: bold;" value="{!$Label.Date}:  "></apex:outputText> 
             <apex:outputText rendered="{!appendix.RecordType.Name != 'Anexo I'}" style="font-size: 14px" value="{0,date,dd'/'MM'/'yyyy}"><apex:param value="{!today()}" /></apex:outputText>
         </font></td>
    </tr>
    <tr>
         <td aling="left"><font face="verdana">
              <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Opportunity.Fields.Marca__c.Label}:  "></apex:outputText> 
              <apex:outputText style="font-size: 14px" value="{!marcaImp}"></apex:outputText>
         </font></td> 
         <td align="left"><font face="verdana">
             <apex:outputText rendered="{!appendix.RecordType.Name == 'Anexo I'}" style="font-size: 14px; font-weight: bold;" value="{!$Label.Date}:  "></apex:outputText> 
             <apex:outputText rendered="{!appendix.RecordType.Name == 'Anexo I'}" style="font-size: 14px" value="{0,date,dd'/'MM'/'yyyy}"><apex:param value="{!today()}" /></apex:outputText>
         </font></td>
    </tr>
    <tr>
         <td align="left"><font face="verdana">
             <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$Label.Appendix_Type}:  "></apex:outputText> 
