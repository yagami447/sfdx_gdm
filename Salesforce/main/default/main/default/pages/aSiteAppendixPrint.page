    <table width="100%" Align="center" columns="1">
        <tr>
            <td><br></br></td>
        </tr>
    </table>

</table>
  
        <apex:pageBlock >
        <apex:outputPanel layout="block" style="overflow:auto; height:250px;margin: 2px; font-size: 12px; text-align:left" >
            <apex:pageBlockTable value="{!appendixItems}" var="i" width="100%" border="1" >
                <apex:repeat value="{!Fields}" var="f">
                    <apex:column value="{!i[f]}" headerValue="{!f.label}" headerClass="headerRow" styleClass="row"></apex:column>                    
                </apex:repeat>
            </apex:pageBlockTable>
        </apex:outputPanel> 
        </apex:pageBlock> 
  
            
</apex:page>