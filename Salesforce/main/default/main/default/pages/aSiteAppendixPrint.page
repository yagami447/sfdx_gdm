<apex:page language="{!IF(ISNULL(language),'en_US',language)}" id="ApenddixPrintPage" cache="false" title="Impresion de Anexos" standardController="Opportunity" extensions="aSiteAppendixPrintController" action="{!validate}" applyBodyTag="false" renderAs="pdf">

<head>
<style type="text/css">
        .headerRow {background-color:#D8D8D8 !important;} 
        .row {color:#000000;} 
</style>
</head>


<table width="100%" Align="center" columns="2">
    <tr>
         <td >
             <apex:image rendered="{!appendix.Marca__c=='BRMX'}" url="{!URLFOR($Resource.LogoImpBRMX)}" style="width: 50%; height: 50%" /> 
             <apex:image rendered="{!appendix.Marca__c=='DSEM'}" url="{!URLFOR($Resource.LogoImpDSEM)}" style="width: 50%; height: 50%" />
         </td> 
    </tr>
</table>

<table width="100%" Align="center" columns="1">
    <tr>
        <TD colspan="1">&nbsp;</TD>
    </tr>
    <td aling="left"><font face="verdana">
           <apex:outputText style="font-size: 18px; font-weight: bold;" value="Oportunidade {!appendix.Name}"></apex:outputText> 
    </font></td>
    <tr>
        <TD><hr></hr></TD>
    </tr>
</table>
 
<table width="100%" Align="center" columns="2" cellpadding="3">

    <tr>
         <td aling="left"><font face="verdana">
              <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Account.Fields.Name.Label}:  "></apex:outputText> 
              <apex:outputText style="font-size: 14px;" value="{!appendix.Account.Name}"></apex:outputText>
         </font></td> 
         <td align="left"><font face="verdana">
             <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Account.Fields.CNPJ_CPF__c.Label}:  "></apex:outputText> 
             <apex:outputText style="font-size: 14px" value="{!appendix.Account.CNPJ_CPF__c}"></apex:outputText>
         </font></td>
    </tr>
    <tr>
         <td aling="left"><font face="verdana">
              <apex:outputText style="font-size: 14px; font-weight: bold;" value="{!$ObjectType.Opportunity.Fields.Safra__c.Label}:  "></apex:outputText> 
              <apex:outputText style="font-size: 14px" value="{!appendix.Safra__c}"></apex:outputText>
         </font></td> 
