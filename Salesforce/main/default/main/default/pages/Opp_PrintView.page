<apex:page standardController="Opportunity" showHeader="false" sidebar="false" extensions="Opp_Multi_View_Ctrl">
    <table width="98%" border="0" cellpadding="0" cellspacing="0">
        <tr><td><!--<apex:image url="{!$Resource.LogoImpresion}" />--></td><td align="right"><a href="javascript:window.print();">Imprimir</a></td></tr>
    </table>
    <apex:sectionHeader subtitle="{!opp.name}" title="Oportunidade de Comercialização" rendered="{!Comercial}"/><apex:sectionHeader subtitle="{!opp.name}" title="Oportunidade de Multiplicação" rendered="{!Produccion}"/>
    <apex:sectionHeader subtitle="{!opp.name}" title="Oportunidade de Venda da Básica" rendered="{!Basica}"/><apex:sectionHeader subtitle="{!opp.name}" title="Oportunidade de Rebaixamento" rendered="{!Rebaja}"/>
    <apex:form >
        <apex:pageBlock title="Detalhes de {!opp.Stagename}" mode="detail">
            <apex:pageBlockSection >
                <apex:pageBlockSectionItem rendered="{!Basica}">
                    <apex:outputLabel value="Nro."/>
                    <apex:outputField value="{!opp.name}"/>
                </apex:pageBlockSectionItem>
                <apex:outputField value="{!opp.name}" rendered="{!NOT(Basica)}" />
                <apex:outputField value="{!opp.Stagename}" rendered="{!NOT(Basica)}"/>
                <apex:outputField value="{!opp.accountid}"/>
                <apex:outputField value="{!opp.Stagename}" rendered="{!Basica}"/>
                <apex:outputField value="{!opp.Safra__c}" />
                <apex:outputField value="{!opp.Negocio__c}" rendered="{!Basica}" />
                <apex:outputField value="{!opp.VB_Franqueado__c}" rendered="{!Basica}"/>
                <apex:outputField value="{!opp.Account.Responsavel__c}" rendered="{!Comercial}"/>
                <apex:outputField value="{!opp.closedate}"/>
            </apex:pageBlockSection>            
        </apex:pageBlock>
    <apex:pageblock title="Produtos" mode="detail">
    <apex:outputLabel value="Nenhum registro para exibir" rendered="{!NOT(showItems)}" />
    <apex:pageBlockTable value="{!Items}" var="item" rendered="{!showItems}" >
        <apex:column ><apex:facet name="header">Produto</apex:facet>{!item.PricebookEntry.Product2.Name}</apex:column>
        <apex:column rendered="{!Produccion}"><apex:facet name="header">Autorização</apex:facet><apex:outputField value="{!item.Autori__c}"/></apex:column>
        <apex:column rendered="{!OR(Produccion,Comercial)}"><apex:facet name="header">Data</apex:facet><apex:outputField value="{!item.Data__c}"/></apex:column>
        <apex:column rendered="{!Produccion}"><apex:facet name="header">Cidade</apex:facet><apex:outputField value="{!item.Cidade__c}"/></apex:column>
        <apex:column rendered="{!Produccion}"><apex:facet name="header">Ha. Autorizados</apex:facet><apex:outputField value="{!item.Area__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Ha. Plantados</apex:facet><apex:outputField value="{!item.Area_Plantada__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Sem. Bruta</apex:facet><apex:outputField value="{!item.Semente_bruta__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Sem. Beneficiada</apex:facet><apex:outputField value="{!item.Semente_beneficiada__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Sem. Aprovada</apex:facet><apex:outputField value="{!item.Semente_aprovada__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Aut.Desc.Sem.Bruta</apex:facet><apex:outputField value="{!item.Autorizacion_V_Industria__c}"/></apex:column>
        <apex:column rendered="{!Produccion}" ><apex:facet name="header">Qtde.Aut.Sem.Bruta(Scs)</apex:facet><apex:outputField value="{!item.Cantidad_autorizada_vi__c}"/></apex:column>
        <apex:column rendered="{!Basica}"><apex:facet name="header">Qtde Scs (40kg)</apex:facet><apex:outputField value="{!item.Qtde_Scs_40kg__c}"/></apex:column>
        
        <apex:column rendered="{!Comercial}"><apex:facet name="header">Sem. Uso Próprio</apex:facet><apex:outputField value="{!item.Semente_uso_propio__c}"/></apex:column>
        <apex:column rendered="{!Comercial}"><apex:facet name="header">Sem. Com.</apex:facet><apex:outputField value="{!item.Semente_comercializada__c}"/></apex:column>
        <apex:column rendered="{!Comercial}"><apex:facet name="header">Autorização Indus.</apex:facet>
            <apex:outputField rendered="{!item.Autorizacion_V_Industria__c != ''}" value="{!item.Autorizacion_V_Industria__c}"/>
            <apex:outputText rendered="{!item.Autorizacion_V_Industria__c = ''}">&nbsp;</apex:outputText>
        </apex:column>
        <apex:column rendered="{!Comercial}"><apex:facet name="header">Sem. Autor. Indus. (Sacas)</apex:facet><apex:outputField value="{!item.Cantidad_autorizada_Aprov__c}"/></apex:column>
    </apex:pageBlockTable>
    </apex:pageblock>
    </apex:form>
</apex:page>