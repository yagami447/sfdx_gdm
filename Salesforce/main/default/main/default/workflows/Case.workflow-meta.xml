    <rules>
        <fullName>Contacto Reclamo</fullName>
        <active>true</active>
        <booleanFilter>1 AND (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>RECLAMO COMERCIAL,RECLAMO DESARROLLO</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Fecha_de_Contacto__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Contacto_Responsable__c</field>
            <operation>equals</operation>
            <value>NÃO</value>
        </criteriaItems>
        <description>Esta regla valida que no pasen 24 Hrs si que se contacte al Agricultor que realizó el reclamo</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Reclamo_Sin_Contactar</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Case.Fecha_de_Asignaci_n__c</offsetFromField>
            <timeLength>24</timeLength>
            <workflowTimeTriggerUnit>Hours</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
