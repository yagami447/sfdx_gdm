<aura:component controller="AuditManagementController">

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:registerEvent name="filtersEvent" type="c:calendarFiltersEvent" />

    <aura:attribute name="filters" type="Map" />
    <aura:attribute name="cidadeSelected" type="List" default="[]" />
    <aura:attribute name="ufSelected" type="List" default="[]" />
    <aura:attribute name="etapaSelected" type="List" default="[]" />
    <aura:attribute name="responsavelSelected" type="List" default="[]" />

    <div class="slds-filters">
        <ol class="slds-list_vertical slds-list_vertical-space">
            <li class="slds-item slds-hint-parent">
                <div class="slds-filters__item">
                    <div class="slds-grid slds-grid_align-spread slds-grid_vertical-align-center">
                        <span class="slds-text-title slds-text-title_bold">Cidade</span>
                        <lightning:buttonIcon iconName="utility:edit" variant="bare" onclick="{!c.handleClick}"
                            value="Cidade__c" alternativeText="Editar filtros de cidade"
                            title="Editar filtros de cidade" />
                    </div>
                    <lightning:dualListbox class="slds-hide" aura:id="Cidade__c" name="Cidade" label="Cidade"
                        variant="label-hidden" sourceLabel="Disponible" selectedLabel="Elegido" disableReordering="true"
                        options="{!v.filters.Cidade__c}" value="{!v.cidadeSelected}" size="3" />
                </div>
            </li>
            <li class="slds-item slds-hint-parent">
                <div class="slds-filters__item">
                    <div class="slds-grid slds-grid_align-spread slds-grid_vertical-align-center">
                        <span class="slds-text-title slds-text-title_bold">UF</span>
                        <lightning:buttonIcon iconName="utility:edit" variant="bare" onclick="{!c.handleClick}"
                            value="UF__c" alternativeText="Editar filtros de UF" title="Editar filtros de UF" />
                    </div>
                    <lightning:dualListbox class="slds-hide" aura:id="UF__c" name="UF" label="UF" variant="label-hidden"
                        sourceLabel="Disponible" selectedLabel="Elegido" disableReordering="true"
                        options="{!v.filters.UF__c}" value="{!v.ufSelected}" size="3" />
                </div>
            </li>
            <li class="slds-item slds-hint-parent">
                <div class="slds-filters__item">
                    <div class="slds-grid slds-grid_align-spread slds-grid_vertical-align-center">
                        <span class="slds-text-title slds-text-title_bold">Etapa</span>
                        <lightning:buttonIcon iconName="utility:edit" variant="bare" onclick="{!c.handleClick}"
                            value="Etapa__c" alternativeText="Editar filtros de Etapa"
                            title="Editar filtros de Etapa" />
                    </div>
                    <lightning:dualListbox class="slds-hide" aura:id="Etapa__c" name="Etapa" label="Etapa"
                        variant="label-hidden" sourceLabel="Disponible" selectedLabel="Elegido" disableReordering="true"
                        options="{!v.filters.Etapa__c}" value="{!v.etapaSelected}" size="3" />
                </div>
            </li>
            <li class="slds-item slds-hint-parent">
                <div class="slds-filters__item">
                    <div class="slds-grid slds-grid_align-spread slds-grid_vertical-align-center">
                        <span class="slds-text-title slds-text-title_bold">Responsavel</span>
                        <lightning:buttonIcon iconName="utility:edit" variant="bare" onclick="{!c.handleClick}"
                            value="Responsavel__c" alternativeText="Editar filtros de Responsavel"
                            title="Editar filtros de Responsavel" />
                    </div>
                    <lightning:dualListbox class="slds-hide" aura:id="Responsavel__c" name="Responsavel"
                        label="Responsavel" variant="label-hidden" sourceLabel="Disponible" selectedLabel="Elegido"
                        disableReordering="true" options="{!v.filters.Responsavel__c}" value="{!v.responsavelSelected}"
                        size="2" />
                </div>
            </li>
        </ol>
        <div class="slds-filters__footer slds-grid slds-grid_align-spread">
            <lightning:button variant="base" label="Aplicar filtros" title="Aplicar filtros"
                onclick="{!c.addFilters}" />
            <lightning:button variant="base" label="Remover filtros" title="Remover filtros"
                onclick="{!c.removeFilters}" />
        </div>
    </div>
</aura:component>