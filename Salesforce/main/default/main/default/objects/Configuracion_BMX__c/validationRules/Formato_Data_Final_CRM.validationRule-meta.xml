<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Formato_Data_Final_CRM</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Data_Final_CRM__c),
NOT(
REGEX(Data_Final_CRM__c,
&quot;(0[1-9]|[1-2][0-9]|3[0-1])\\/(0[1-9]|1[0-2])&quot;
)
)
)</errorConditionFormula>
    <errorDisplayField>Data_Final_CRM__c</errorDisplayField>
    <errorMessage>Os dados não estão de acordo com o formato: dd/mm</errorMessage>
</ValidationRule>
