<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Administracion_y_Fiscalizador</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Supervisor_Admin_y_Fiscalizacion</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Aprobada</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Analiza el Supervisor</description>
        <label>Análisis por el Supervisor</label>
        <name>Paso_1</name>
        <rejectionActions>
            <action>
                <name>Aviso_de_Desprobacion_x_Supervisor_Stock_Mult</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Limpiar_Next_Step</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Rechazada_x_Supervisor</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Este proceso de Aprobación se utiliza para los Stock de Multiplicadores.</description>
    <emailTemplate>Circuito_de_Anexos/CA_Anexo_I</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Stock Multiplicadores</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>notEqual</operation>
            <value>ACMEE</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>notEqual</operation>
            <value>Aprobada,AN - Anulada</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Actualizar_activa</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Aviso_de_Aprobacion_FINAL_Stock_Mult</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Limpiar_Next_Step</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Limpiar_Motivo_de_Rechazo</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Pendiente_de_An_lisis</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Stock Multiplicadores</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>25</processOrder>
    <recallActions>
        <action>
            <name>Actualizar_Etapa_Rech</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Limpiar_Next_Step</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
