<apex:page language="{!IF(ISNULL(language),'en_US',language)}" id="ContractPage" showHeader="false" standardStylesheets="false" cache="false" title="{!$ObjectType.Contrato__c.LabelPlural}" controller="aSiteContractController" action="{!validate}">
<apex:composition template="{!$Site.Template}">
<apex:define name="body">
<style>
.selected {
    background: rgba(38,185,154,.16);
    border-color: rgba(221,221,221,0.780392);
}
</style>
<body class="nav-md footer_fixed">
    <center>
    <apex:panelGrid bgcolor="white" columns="1"> 
        <br/>
        <br/>
        <apex:outputPanel layout="block" styleClass="topPanel" style="margin-top:20px;">
            <apex:panelGrid cellpadding="0" cellspacing="0" bgcolor="white" columns="1"> 
                <apex:panelGroup >
                <apex:form id="profileForm">                    
                <div class="row">
                    <div class="right_col" role="main" style="min-width:800px">
                        <div class="">
                            <div class="page-title">
                                <div class="title_left">
                                <h3>{!$ObjectType.Contrato__c.LabelPlural}</h3>
                                </div>
                            </div>
                        </div>            
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>{!$ObjectType.Account.Label}<small>{!$Label.active}</small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <div class="col-xs-12 profile_left">                                           
                                            <h3>{!Account.Nome_fantasia__c}</h3>                    
                                            <ul class="list-unstyled user_data">
                                                <li><i class="fa fa-briefcase user-profile-icon"></i> {!Account.Name}</li>
                                                <li><i class="fa fa-map-marker user-profile-icon"></i> {!Account.BillingStreet}, {!Account.BillingState}, {!Account.BillingCountry} </li>
                                                <li class="m-top-xs"><i class="fa fa-external-link user-profile-icon"></i>
                                                <a href="http://{!Account.Site}" target="_blank">{!Account.Site}</a>
                                                </li>
                                            </ul>                    
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"></div>
                                                
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>{!$ObjectType.Contrato__c.LabelPlural}<small>{!$Label.active_list}</small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <div role="tabpanel" class="tab-pane" id="tab_conte" aria-labelledby="profile-tab">
                                            <apex:pageBlock id="cont">
                                            <apex:pageblockTable value="{!contracts}" var="s" styleclass="data table table-striped no-margin"  >
                                                <apex:column headerClass="column-title" headerValue="{!$ObjectType.Contrato__c.fields.Name.Label}" value="{!s.Name}" styleclass="{!IF(s.Id==recId,'selected','')}" />
                                                <apex:column headerValue="{!$ObjectType.Contrato__c.fields.Safra__c.Label}" value="{!s.Safra__c}" styleclass="{!IF(s.Id==recId,'selected','')}"/>
                                                <apex:column headerValue="{!$ObjectType.Contrato__c.fields.Data_de_Recebemento__c.Label}" value="{!s.Data_de_Recebemento__c}" styleclass="{!IF(s.Id==recId,'selected','')}"/>
                                                <apex:column headerValue="{!$ObjectType.Contrato__c.fields.Chegou_na_Brasmax__c.Label}" value="{!s.Chegou_na_Brasmax__c}" styleclass="{!IF(s.Id==recId,'selected','')}"/>
                                                <apex:column headerClass="column-title" headerValue="{!$Label.action}" styleclass="{!IF(s.Id==recId,'selected','')}" style="vertical-align: middle;">
                                                    <apex:commandLink value="{!$Label.View_Products}" action="{!setActiveContract}" rerender="cont, it">
                                                        <apex:param value="{!s.Id}" assignTo="{!recId}" name="toSelect"/>
                                                    </apex:commandLink>
                                                </apex:column>                        
                                            </apex:pageblockTable>
                                            </apex:pageBlock>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="clearfix"></div> 
                                                
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="x_panel">
                                    <div class="x_title">
                                        <h2>{!$ObjectType.Item_del_Contrato__c.LabelPlural}<small>{!$Label.active_list}</small></h2>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="x_content">
                                        <div role="tabpanel" class="tab-pane" id="tab_items" aria-labelledby="profile-tab">
                                            <apex:pageBlock id="it">
                                            <apex:pageblockTable value="{!items}" var="s" styleclass="data table table-striped no-margin">
                                                <apex:column headerValue="{!$ObjectType.Item_del_Contrato__c.fields.Cultivar__c.Label}" value="{!s.Cultivar__c}"/>
                                                <apex:column headerValue="{!$ObjectType.Item_del_Contrato__c.fields.Variedade__c.Label}" value="{!s.Variedade__c}"/>
                                                <apex:column headerValue="{!$ObjectType.Item_del_Contrato__c.fields.Nombre_de_Registro__c.Label}" value="{!s.Nombre_de_Registro__c}"/>
                                                <apex:column headerValue="{!$ObjectType.Item_del_Contrato__c.fields.Precio__c.Label}" value="{!s.Precio__c}"/>
                                            </apex:pageblockTable>
                                            </apex:pageBlock>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </apex:form> 
                </apex:panelGroup>
            </apex:panelGrid> 
        </apex:outputPanel>
    </apex:panelGrid>
    </center>
    <br/>
    </body>
</apex:define>
</apex:composition>
</apex:page>